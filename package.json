    "ci:publish": "lerna publish from-package --yes --no-verify-access"
  },
  "devDependencies": {
    "@galtz-library/eslint-config": "file:packages/eslint-config",
    "@galtz-library/prettier-config": "file:packages/prettier-config",
    "eslint": "^7.32.0",
    "lerna": "^4.0.0",
    "prettier": "^2.8.5"
  }
}