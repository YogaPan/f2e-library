{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "clean": "lerna clean --yes && rm -rf ./node_modules",
    "prerelease": "npm run lint && npm run test",
